<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- மாற்றம் 1: Display name புத்தகக் கடைக்கு மாற்றப்பட்டது -->
    <display-name>PahanaBookshop</display-name>
    
    <!-- Welcome file என்பது, பயனர் project-ன் root URL-க்குச் செல்லும்போது காட்டப்படும் பக்கம் -->
    <welcome-file-list>
        <welcome-file>jsp/login.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Session Configuration: 30 நிமிடங்களுக்குப் பிறகு session தானாகவே முடிந்துவிடும் -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <!-- Error Pages: 404 அல்லது 500 பிழை ஏற்பட்டால், நமது error.jsp பக்கத்தைக் காட்டு -->
    <error-page>
        <error-code>404</error-code>
        <location>/jsp/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/jsp/error.jsp</location>
    </error-page>
    
    <!-- மாற்றம் 2: Context Parameters புத்தகக் கடை டேட்டாபேஸ்-க்கு மாற்றப்பட்டன -->
    <!-- குறிப்பு: இந்த அளவுருக்கள் தற்போது நமது project-ல் பயன்படுத்தப்படவில்லை,
         ஆனால் எதிர்காலத் தேவைக்காக இங்கே வைக்கப்பட்டுள்ளன. -->
    <context-param>
        <param-name>db.driver</param-name>
        <param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
    </context-param>
    <context-param>
        <param-name>db.url</param-name>
        <param-value>jdbc:sqlserver://localhost:1433;databaseName=PahanaBookshopDB;encrypt=false</param-value>
    </context-param>
    
    <!-- 
      மாற்றம் 3: Servlet மற்றும் Filter பதிவுகள் நீக்கப்பட்டன.
      @WebServlet மற்றும் @WebFilter ஆகிய Java annotation-கள் இப்போது இந்தப் பதிவுகளைக் கையாளுகின்றன.
      இதுதான் நவீன மற்றும் சிறந்த முறையாகும்.
    -->

</web-app>
